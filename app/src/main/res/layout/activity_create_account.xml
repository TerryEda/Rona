<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".CreateAccount">

    <TextView
        android:id="@+id/createyour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="125dp"
        android:text="Create your"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/rona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createyour"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="103dp"
        android:text="Rona account"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic" />

    <EditText
        android:textStyle="italic"
        android:textSize="20sp"
        android:id="@+id/email"
        android:textColorHint="@color/blue"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="  Enter email"
        android:layout_marginTop="40dp"
        android:layout_below="@id/rona"
        android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textStyle="italic"
        android:textSize="20sp"
        android:id="@+id/password"
        android:textColorHint="@color/blue"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="  Select Password"
        android:layout_marginTop="40dp"
        android:layout_below="@id/email"
        android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textStyle="italic"
        android:textSize="20sp"
        android:id="@+id/confirmpassword"
        android:textColorHint="@color/blue"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="  Confirm password"
        android:layout_marginTop="40dp"
        android:layout_below="@id/password"
        android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="createMyAccount"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Create Account"
        android:backgroundTint="@color/green"
        android:background="@drawable/buttonshape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="haveAccount"
        android:layout_alignParentRight="true"
        android:layout_below="@id/confirmpassword"
        android:textColor="@color/white"
        android:text="I already have an account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        android:visibility="invisible" />


</RelativeLayout>